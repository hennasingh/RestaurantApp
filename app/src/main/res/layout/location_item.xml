<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Wendy's"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:padding="2dp"
        android:drawablePadding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_location" />


    <TextView
        android:id="@+id/tv_cuisine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:padding="2dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="Pizza"
        app:drawableStartCompat="@drawable/ic_food" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_street"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Street"
        android:padding="2dp"
        app:drawableStartCompat="@drawable/ic_streetview"
        app:layout_constraintStart_toStartOf="@id/tv_cuisine"
        app:layout_constraintEnd_toEndOf="@id/tv_cuisine"
        app:layout_constraintTop_toBottomOf="@id/tv_cuisine"
        android:textAppearance= "@style/TextAppearance.AppCompat.Body2"/>

</androidx.constraintlayout.widget.ConstraintLayout>